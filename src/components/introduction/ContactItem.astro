---
import { Icon } from 'astro-icon/components';
import Link from '../Link.astro';

type Props = {
  icon: string;
  alt: string;
  title: string;
  link: string;
};
const { icon, alt, title, link } = Astro.props;
---

<li class="flex flex-row gap-2">
  <Icon name={icon} size={28} class="fill-white self-center" aria-hidden="true" />
  <Link external href={link} aria-label={alt}>
    <span class="text-lg font-medium">{title}</span>
  </Link>
</li>
