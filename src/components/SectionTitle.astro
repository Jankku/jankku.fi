---
import Line from './Line.astro';

type Props = {
  title: string;
};

const { title } = Astro.props;

const slugify = (str: string) =>
  str
    .toLowerCase()
    .replace(/ /g, '-')
    .replace(/[^\w-]+/g, '');
---

<div id={slugify(title)} class="flex flex-row items-center gap-2 pb-10">
  <h2 class="flex-shrink text-lg font-semibold tracking-widest uppercase">
    {title}
  </h2>
  <Line />
</div>
