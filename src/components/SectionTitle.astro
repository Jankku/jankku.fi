---
import Line from './Line.astro';

type Props = {
  title: string;
};

const { title } = Astro.props;

const slugify = (str: string) =>
  str
    .toLowerCase()
    .replace(/ /g, '-')
    .replace(/[^\w-]+/g, '');
---

<div class="flex flex-row items-center gap-2 pb-8">
  <h2
    id={slugify(title)}
    tabindex="-1"
    class="shrink text-lg font-semibold tracking-widest uppercase"
  >
    {title}
  </h2>
  <Line />
</div>
