---
import Footer from '@/sections/Footer.astro';
import { Font } from 'astro:assets';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="url" content="https://jankku.fi" />
    <meta name="description" content="Jan-Erik's website" />
    <meta name="language" content="en_us" />
    <meta name="author" content="Jan-Erik" />
    <meta property="og:site_name" content="jankku.fi" />
    <meta property="og:title" content="Jan-Erik" />
    <meta property="og:description" content="Jan-Erik's website" />
    <meta property="og:url" content="https://jankku.fi" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" sizes="any" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/manifest.json" />
    <link rel="preload" as="image" href="/hero.svg" fetchpriority="high" />
    <Font preload cssVariable="--font-cooper-hewitt" />
    <Font cssVariable="--font-concourse-index" />
    <script
      is:inline
      defer
      data-domain="jankku.fi"
      src="https://analytics.jankku.fi/js/plausible.js"></script>
  </head>
  <body
    id="top"
    class="min-h-screen bg-gray-50 font-sans text-slate-900 dark:bg-slate-950 dark:text-gray-200"
  >
    <slot />
    <Footer />
    <style is:global>
      @import 'tailwindcss';

      @theme {
        --font-sans:
          var(--font-cooper-hewitt), var(--font-concourse-index), ui-sans-serif, system-ui,
          sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';
      }

      @view-transition {
        navigation: auto;
      }

      :focus-visible {
        @apply ring-cyan-500;
        outline: 5px solid var(--tw-ring-color);
        outline-offset: 2px;
      }

      :root {
        color-scheme: light;
        font-size: 1.1rem;
        scrollbar-gutter: stable;
        scrollbar-color: var(--color-sky-700) var(--color-slate-200);
      }

      a {
        @apply text-sky-700;
      }

      @media screen and (prefers-color-scheme: dark) {
        :root {
          color-scheme: dark;
          scrollbar-color: var(--color-cyan-500) var(--color-slate-800);
        }

        a {
          @apply text-cyan-500;
        }
      }
    </style>
  </body>
</html>
