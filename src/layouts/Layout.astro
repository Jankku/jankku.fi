---
import Footer from '@/sections/Footer.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="url" content="https://jankku.fi" />
    <meta name="description" content="Jan-Erik's website" />
    <meta name="language" content="en_us" />
    <meta name="author" content="Jan-Erik" />
    <meta property="og:site_name" content="jankku.fi" />
    <meta property="og:title" content="Jan-Erik" />
    <meta property="og:description" content="Jan-Erik's website" />
    <meta property="og:url" content="https://jankku.fi" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <meta name="theme-color" content="#1679ca" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" sizes="any" href="favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="apple-touch-icon.png" />
    <link rel="manifest" href="/manifest.json" />
    <script defer data-domain="jankku.fi" src="https://analytics.jankku.fi/js/plausible.js"></script>
    <style>
      @view-transition {
        navigation: auto;
      }
    </style>
  </head>
  <body class="min-h-screen bg-white font-sans text-black dark:bg-slate-950 dark:text-gray-100">
    <slot />
    <Footer />
    <style is:global>
      @tailwind base;
      @tailwind components;
      @tailwind utilities;

      :root {
        color-scheme: light;
      }

      @media screen and (prefers-color-scheme: dark) {
        :root {
          color-scheme: dark;
        }
      }

      a {
        @apply text-cyan-500 underline decoration-2 underline-offset-4 [text-decoration-skip-ink:none];
      }
    </style>
  </body>
</html>
